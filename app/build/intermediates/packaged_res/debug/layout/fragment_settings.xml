<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_notifications"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/check_notify_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_9" />

    <CheckBox
        android:id="@+id/check_notify_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_12" />

    <CheckBox
        android:id="@+id/check_notify_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_18" />

</LinearLayout>
